@import "../../../assets/css/variable"

.tel-form
  position relative
  display flex
  justify-content space-between
  align-items center
  padding 0 $default-h-padding
  height 5.5rem
  background $theme-white-color
  color $font-main-color
  label
    font-size $font-bigger-size
    margin-right 1.5rem
  input
    font-size $font-normal-size
    flex-grow 1
    text-align left
  svg
    fill #cecece
    vertical-align middle
  .icon-close
    width 1.9rem
    height @width
