@import "../../../assets/css/variable"

.big-title
  font-size 2.1rem
  text-align center
  color #6e6e6e
  line-height 1
  margin-top 4rem
  letter-spacing 1px

.form
  margin-top 3rem
  background-color $theme-white-color
  color $font-main-color
  font-size $font-bigger-size
  line-height 5.5rem
  .form-field
    position relative
    display flex
    align-items center
    margin 0 $default-h-padding
    height 5.5rem
    border-bottom $default-border
  .form-label
    flex none
    svg
      stroke $theme-blue-color
      fill none
      width 1.6rem
      height 2.1rem

.form-field
  svg
    fill #cecece
    vertical-align middle
  .icon-close
    width 1.9rem
    height @width
  .icon-close-eyes
  .icon-open-eyes
    width 1.9rem
    height @width
  input
    height 2rem
    line-height 2rem
    flex auto
    padding-left 3.3rem
    color $font-main-color

.btn-group
    position absolute
    right 1.2rem
    top 0
  button
    height 5.5rem;
    width 3rem
    &:active
      svg
        fill darken($font-weak-color, 10%)
  .close-btn
    text-align center

.btn-box
  display flex
  padding 9.2rem 0 2rem
  width 16rem
  margin 0 auto
  .form-btn
    flex-grow 1
    height 4.5rem
    color $theme-white-color
    font-size $font-big-size
    background-color $theme-blue-color
    border-radius @height
    &[disabled]
      background-color $font-weak-color
    &:active
      background-color darken($theme-gray-color, 10%)
  .active
    background-color $theme-blue-color

.form-tip
  position absolute
  right 1.2rem
  width auto
  padding 2rem 0
  line-height 1
  color $font-main-color
  font-size 1.3rem
  &:active
    font-weight 900
    color darken($theme-blue-color, 10%)

.footer-tip
  position fixed
  width 100%
  bottom 2.4rem
  text-align center
  color $font-sub-color
  font-size $font-small-size
  .agreement
  .tel
    color $theme-blue-color
    &:active
      color-darken()
  .tel
    text-decoration underline

