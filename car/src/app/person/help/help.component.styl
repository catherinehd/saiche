@import "../../../assets/css/variable"

.help-sec
  background-color $body-color
  padding 0 $default-h-padding
  color #212121;
  font-size $font-normal-size
.big-title
  font-size $font-bigger-size
  text-align center
  color #212121
  line-height 1
  margin-top 1.8rem
  letter-spacing 1px
ul
  .question
    font-size $font-bigger-size
    margin 1.6rem 0
    padding-left 1rem
  li
    line-height 2.4rem
    margin-bottom .6rem

.outer-box
  padding-bottom 2.2rem

table
  border-collapse collapse
  width 100%
  cellspacing 0
  th
  td
    border $default-border
    text-align left
    padding 0 .6rem
  th
    font-size 1.2rem
    text-align center
  td
    font-size 1rem
  td:nth-child(1)
    text-align center
.spe-table1
  table
    td
      padding-left .1rem
.spe-table
  table
    td
      text-align left
      padding-left .9rem
.detail-shejiang
  li
    margin-top 2rem
    table
      margin-top .9rem

.footer
  text-align center
  height 6rem
  font-size $font-normal-size
  padding 1.2rem 1.5rem 2.7rem
  border-top $default-border


