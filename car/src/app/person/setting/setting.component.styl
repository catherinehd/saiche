@import "../../../assets/css/variable"

.tel
  background $theme-white-color
  display flex
  width 100%
  padding 0 1.5rem
  height 4.8rem
  margin-top 1rem
  span
    line-height 4.8rem
    &:nth-child(1)
      color $font-main-color
      text-align left
      font-size 1.6rem
    &:nth-child(2)
      color #6e6e6e
      text-align right
      flex-grow 1
      font-size 1.4rem
.setting-btn
  margin-top 3rem
  width 100%
  height 4.8rem
  color $theme-little-blue-color
  background $theme-white-color
  font-size $font-bigger-size
  &:active
     background-color darken($theme-white-color, 10%)
