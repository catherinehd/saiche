@import "../../../assets/css/variable"

.modal-sec
  position fixed
  display flex
  align-items center
  justify-content center
  width 100%
  height 100%
  top 0
  background-color rgba(0,0,0,.4)
  z-index 3

.modal-container
  width 28rem
  color $font-main-color
  background-color #fff;
  border-radius .5rem
  overflow hidden

.modal-content
  padding 4.2rem 1rem
  text-align center
  font-size $font-bigger-size

.btn-group
  display flex
  button
    flex auto
    font-size $font-big-size
    height 4.5rem
    border-top $default-border
    &:last-child
      border-left $default-border
      color $theme-red-color
    &:active
      background-color darken($theme-white-color, 10%);
