@import "../../../assets/css/variable"

.modal-sec
  position fixed
  display flex
  align-items center
  justify-content center
  width 100%
  height 100%
  top 0
  background-color rgba(0,0,0,.4)
  z-index 3

.modal-container
  width 29rem
  color $font-main-color
  background-color #fff;
  border-radius .5rem
  overflow hidden

.modal-title
  font-size $font-bigger-size
  color $font-main-color
  padding-top 1.9rem
  padding-bottom 2.3rem
  text-align center

.modal-content
  padding 0 1rem 4.2rem
  text-align center
  font-size $font-normal-size
  line-height 1.5

.btn-group
  display flex
  button
    flex auto
    font-size $font-normal-size
    height 4.8rem
    border-top $default-border
    &:last-child
      border-left $default-border
      color $theme-blue-color
    &:active
      background-color darken($theme-white-color, 10%);
